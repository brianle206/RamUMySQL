<p id="notice"><%= notice %></p>

<h1>Listing Badges</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @badges.each do |badge| %>
      <tr class="badge-row">
        <td><img src=<%= badge.image %> class="badge-img" /></td>
        <td><%= link_to 'Show', badge, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_badge_path(badge), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', badge, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Badge', new_badge_path %>
