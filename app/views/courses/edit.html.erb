<div class='container'>
	<h1>Course Edit</h1>
	<%= render 'form' %>
	<br>
	<%= link_to "New Section", new_course_learn_path(params[:id]), class: "btn btn-primary" %>
	<br><br>
	<% @course.learns.each do |learn| %>
		<ul>
		<li><%= link_to "#{learn.title}", edit_learn_path(learn) %> <%= link_to "Destroy", learn_path(learn), class: "
		btn btn-danger", data: {:confirm => 'Whoa now! are you Rick Phillips? Are you sure you want to do this Rick?'}, :method => :delete %></li>
		<%= link_to "New Lecture", new_learn_lecture_path(learn.id), class: "btn btn-default"%>
		<% learn.lectures.each do |lecture| %>
			<ul>
				<li><td><%= link_to "#{lecture.title}", edit_lecture_path(lecture.id) %></td></li>
			</ul>
		<% end %>
		</ul>
	<% end %>
</div>