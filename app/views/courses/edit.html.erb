<h1>Course Edit</h1>
<%= render 'form' %>
<br>
<%= link_to "New Section", new_course_learn_path(params[:id]), class: "btn btn-primary" %>
<br><br>
<% @course.learns.each do |learn| %>
	<ul>
	<li><%= link_to "#{learn.title}", edit_learn_path(learn) %></li>
	<%= link_to "New Lecture", new_learn_lecture_path(learn.id), class: "btn btn-default"%>
	<% learn.lectures.each do |lecture| %>
		<ul>
			<li><td><%= link_to "#{lecture.title}", edit_lecture_path(lecture) %></td></li>
		</ul>
	<% end %>
	</ul>
<% end %>

<h2>Add Sections to this Course </h2>
<% @learns = Learn.all %>
<% @learns.each do |learns| %>
  <h3><%= link_to "#{learns.title}", edit_learn_path(learns) %> </h3>
<% end %>