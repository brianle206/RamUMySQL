<div class="container">
  <h1 class="text-center">RAM University Courses</h1>

	<% if !@courses.empty? %>
		<% @courses.each do |course| %>
		  <a href='/courses/<%= course.id %>'>
			  <div class="col-sm-4">
					<h2 class="text-center"><%= course.title %></h2>
					<p><%= course.description %></p>
				</div>
			</a>
		<% end %>
	<% end %>
</div>
