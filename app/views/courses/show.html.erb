<!-- This is Course Overview page -->
<br>
<h1><%= @course.title %></h1>
<p><%= @course.description %></p>

<% if current_user %>
  <% is_enrolled(@course.id) %>
	<% if @enrolled != true %>
    <div class="row">
    	<p>Add this course now to start your journey on becoming RAM certified!</p>
      <div class="btn btn-default">
        <%= link_to "Enroll Now!", "/enroll/#{@course.id}" %>
      </div>
    </div>
	<% end %>
<% end %>

<% @course.learns.each do |m| %>
  <%= link_to course_learn_path(@course,m.id) do %>
    <div class="col-md-6 col-sm-3 flip-container">
      <div class="flipper">
        <div class="front tile">
          <div class="front-title">
            <%= m.title %>
          </div>
          <div class="col-sm-4">
            <img class="img-responsive" src="<%= m.img %>"/>
          </div>
          <div class="col-sm-8">
            <p>
              <%= m.description %>
            </p>
          </div>
          <div class="back tile">
            <div class="back-title">
              <% m.lectures.each do |l| %>
                <% if l.learn_id == m.id %>
                  <div class="col-sm-6">
                    <p>
                      <%= l.title  %>
                    </p>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


