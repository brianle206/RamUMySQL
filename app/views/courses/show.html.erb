This is Course Overview page
<h1><%= @course.title%></h1>
<p><%= @course.description %></p>
<div>
<% if current_user %>
  <% is_enrolled(params[:id]) %>
    <% if @enrolled != true %>
      <p>Add This Course now to start learning</p>
      <a href="/enroll/<%= @course.id%>" class='btn btn-default'>Enroll</a>
    <% end %>
<% end %>
</div>
<% @course.learns.each do |m| %>
  <%= link_to course_learn_path(@course,m.id) do %>
    <div class="col-md-6 col-sm-3 flip-container">
      <div class="flipper">
        <div class="front tile">
          <div class="front-title">
            <%= m.title %>
          </div>
          <div class="col-sm-4">
            <img class="img-responsive" src="<%= m.img %>"/>
          </div>
          <div class="col-sm-8">
            <p>
              <%= m.description %>
            </p>
          </div>
        </div>
        <div class="back tile">
          <div class="back-title">
            <% m.lectures.each do |l| %>
              <% if l.learn_id == m.id %>
                <div class="col-sm-6">
                  <p>
                    <%= l.title  %>
                  </p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

