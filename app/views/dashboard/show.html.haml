= render 'user_dashboard'

%p= @user.email
%p= @user.created_at
%p= @user.admin

%table.table.table-bordered
	%thead
		%tr
			%th Section
			%th Lesson
			%th Status
		- @article.each do |article|
			%tr
				%td= article.title
				%td
				%td
				- @lesson.each do |lecture|
					- if lecture.article_id == article.id
						%tr
							%td
							%td= lecture.title
							%td= @size
