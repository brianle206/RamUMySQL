<h2 class='black'>Quiz Scores</h2>
<table class='table'>
	<tr>
		<th>Quiz</th>
		<th class='text-center'>Your Best Score</th>
		<th class='text-center'>Attempts</th>
		<th class='text-center'>Retakeable?</th>
	</tr>
<% find_users_quiz_score %>
	<% @user_scores.each do |score| %>
		<tr class=''>
			<td><%= find_quiz_title(score.quiz_id) %> </td>
			<td class='text-center'><%= score.score %> % </td>
			<td class='text-center'><%= score.attempts %></td>
			<td class='text-center'><%= score.retake %></td>
		</tr>
	<% end %>
</table>