%header
	%span.toggle-button
		.menu-bar.menu-bar-top
		.menu-bar.menu-bar-middle
		.menu-bar.menu-bar-bottom
	.menu-wrap
		.menu-sidebar
			%ul.menu
			-progress
			-@article.each do |article|
				%li
					%h4= article.title
					- @lessons. each do |lesson|
						%ul 
						- if lesson.article_id == article.id
							%li= link_to lesson.title, "/articles/#{article.id}/lecture/#{lesson.id}"
