<div class='container'>
	<h1>You've completed the quiz! Nice!</h1>

	<% params[:answer].each do |answer| %>
		<% question_content(answer[0]) %>
			<h2><%= @question.question %></h2>
				<li class='correct'><strong>Correct Answer:</strong> <%= @question.answer %></li>

				<% answer_content(answer[1]) %>
					<li class='response'><strong>Your Answer:</strong> <%= @answer %> </li>

	<% end %>

	<h1>You Got <%= @correct %> / <%= params[:answer].count%> correct!</h1>
	<% if @correct < 3 %>
		<h1 class='red'>Wow you got some more learn'n 'ta do <strong><%= current_user.email %></strong></h1>
	<% end %>
	<h1><%= @success %></h1>

	<a href="/dashboard">Return To Dashboard</a>
</div>